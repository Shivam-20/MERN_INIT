# Development stage
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk --no-cache add \
    curl \
    git \
    python3 \
    make \
    g++

# Copy package files
COPY package*.json ./

# Install dependencies with legacy peer deps to handle dependency conflicts
RUN npm install --legacy-peer-deps

# Explicitly install react-icons with legacy peer deps to handle dependency conflicts
RUN npm install react-icons@5.0.1 --save --legacy-peer-deps

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Set environment variables for Vite
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true
ENV NODE_ENV=development

# Set the Vite host to 0.0.0.0 to allow access from outside the container
ENV HOST=0.0.0.0
ENV PORT=3000

# Start the development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
