# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/encriptofy
MONGODB_URI_TEST=mongodb://localhost:27017/encriptofy_test

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=90

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Session (if using sessions)
# SESSION_SECRET=your_session_secret_here
# SESSION_MAX_AGE=86400000

# Email (if using email functionality)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# EMAIL_FROM=Encriptofy <noreply@encriptofy.com>

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=http://localhost:3000

# Google OAuth (if implementing OAuth)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=/api/v1/auth/google/callback

# Facebook OAuth (if implementing OAuth)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_CALLBACK_URL=/api/v1/auth/facebook/callback
