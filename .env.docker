# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://mongodb:27017/encriptofy
MONGODB_URI_TEST=mongodb://mongodb:27017/encriptofy_test

# JWT
JWT_SECRET=dev_secret_key_change_in_production_123
JWT_EXPIRES_IN=1d
JWT_COOKIE_EXPIRES_IN=90

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=1000

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=http://localhost:3000
